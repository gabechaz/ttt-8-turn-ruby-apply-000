#!/usr/bin/env ruby
require_relative '../lib/turn'
board = [" ", " ", " ", " ", " ", " ", " ", " ", " "]

puts "Welcome to Tic Tac Toe!"



turn(board)

input = gets.strip



 index = input_to_index(input)

if valid_move?(board, index) == false

turn(board)
else

move(board, index)
display_board(board)
 end
 





